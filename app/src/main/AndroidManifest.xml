<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doriyaspielman.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterScreen">
            <intent-filter>
                <action android:name="com.example.doriyaspielman.myapplication.register_screen" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".StoreScreen">
            <intent-filter>
                <action android:name="com.example.doriyaspielman.myapplication.store_screen" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".StoreScreenManager">
            <intent-filter>
                <action android:name="com.example.doriyaspielman.myapplication.store_ manager" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".AddManager">
            <intent-filter>
                <action android:name="com.example.doriyaspielman.myapplication.add_manager" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

      <activity android:name=".RemoveManager">
            <intent-filter>
                <action android:name="com.example.doriyaspielman.myapplication.remove_manager" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>
</manifest>