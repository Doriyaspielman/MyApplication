<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/product_name"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-55dp"
            android:layout_marginTop="118dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/product_pic1"
            android:layout_width="103dp"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/red_adidas" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="133dp"
            android:layout_marginTop="19dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="187dp"
            android:text="TextView" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_pic1"
            android:layout_alignEnd="@+id/product_pic1"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="63dp"
            android:clickable="true"
            app:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
            app:srcCompat="@drawable/minos" />

    </RelativeLayout>

</LinearLayout>
